<%- include('../layouts/header.ejs') %>
<div class="full-page">
<div class="container">
<div class="text-center  center-div">
    <div class="container col-6 py-5 p-4">
        <div class="title pb-3">
            <h2><strong>Registration</strong></h2>
        </div>
            <form action="/signup" method="post" onsubmit="return validRegister()" >
                <div class="form-group mt-3">
                <input type="text" class="form-control" name="fname" placeholder="Enter First Name" id="myname" >
                <br>
                <input type="text" class="form-control" name="lname" placeholder="Enter Last Name" id="mynamel" >
                <br>
                <input type="email" class="form-control" name="email" placeholder="Enter Email" id="email" required>
                <br>
                <input type="text" class="form-control" name="mobileno" placeholder="Enter MobileNo" id="mno" required>
                <br>
                <input type="password" class="form-control" name="password" placeholder="Enter Password" id="password" >
                <br>
                <input type="password" class="form-control" name="cpassword" placeholder="Confirm Password" id="cpassword" pattern="^[^\s]+(\s+[^\s]+)*$" title="Passwords must match" >
                <div id="password-mismatch" class="alert alert-danger mt-2" style="display: none;">
                    Passwords do not match. Please try again.
                  </div>
                </div>
                <p id="email-error" class="error-message"></p><p id="name-error" class="error-message"></p>
                <p id="password-error" class="error-message"></p><p id="mobile-error" class="error-message"></p>
                <br><br>
                <input type="submit" class="btn btn-success rounded-pill" value="Register">

            </form>
            <br>
            <p>Already Registered? <a href="/login">Login Here</a></p>
            <%
                if(typeof message !== 'undefined'){
                    %>
                    <div id="invalid-msg" class="alert alert-danger text-center">
                    <%- message %></p>
                    </div>
                    <%
                }
                %>
    </div>
</div>
</div>
</div>

<%- include('../layouts/footer.ejs') %>