<%-include('../layouts/header.ejs') %>
<div class="full-page">
<div class="container">
<div class="text-center  center-div">
    <div class="container col-6 py-5 p-4">
        <div class="title pb-3">
            <div class="sidebar-brand-wrapper d-none d-lg-flex align-items-center justify-content-center" style="color: aliceblue;">
                <img src="/public/userlogin/assets/mylogo.svg" alt="logo" style="width: 180px; height: 180px;">
              </div>   
            <h3> LOGIN </h3>
                        <% 
                        if(typeof message !== 'undefined'){
                            %>
                            <div id="invalid-msg" class="alert alert-danger text-center">
                                <h4><%- message %></h4>
                            </div>
                            <%
                        }
                        %>
         </div>

        <form action="/login" method="post" onsubmit="return validateForm()">
            <div class="form-group mt-3">
                <input type="email" class="form-control" name="email" placeholder="Enter email" id="email">
                <p id="email-error" class="error-message"></p>
                <br>
                <input type="password" class="form-control" name="password" placeholder="Enter password" id="password">
                <p id="password-error" class="error-message"></p>
            </div>
            <br>
                <input type="submit" class="btn btn-success" value="Login">

        </form>
        <br>
        <p>New User? <a href="/signup">Signup Here</a></p>
        <a href="/forget">Forgot Password</a>

    </div>
</div>
</div>
</div>

<%-include('../layouts/footer.ejs') %>