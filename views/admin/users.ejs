<%-include('../admin/layouts/header.ejs') %>

<%-include('../admin/layouts/sidebar.ejs') %>

<%-include('../admin/layouts/navbar.ejs') %>

<div class="main-panel">
  <div class="content-wrapper">

      <div class="row ">
          
          <div class="col-12 grid-margin">
              <div class="card">
                  <div class="card-body">
                      <div class="mb-5 ">
                          <ul class="navbar-nav w-100">
                              <li class="nav-item w-100">
                                  <!-- d-none -->
                                  <form action="/admin/searchUsers" method="get" class="nav-link mt-2 mt-md-0 col-12 d-lg-flex search">
                                      <input type="text" name="key" class="form-control mb-1 text-light" placeholder="Search Users">
                                      <button type="submit" class="btn-inverse-info mb-1">search</button>
                                  </form>
                              </li>
                          </ul>
                      </div>
                      <h4 class="card-title">Users</h4>
                      <div class="table-responsive">
                          <table class="table" id="user-table">
                              <thead>
                                  <tr>

                                      <th> Full Name </th>
                                      <th> Email </th>
                                      <th> Mobile No.</th>
                                      <th> Status </th>
                                      <th> Joined On</th>
                                      <th> Action</th>
                                  </tr>
                              </thead>
                              <tbody>
                                <% for (var i = 0; i < users.length; i++) { %>
                                  <tr>
                                      <!-- list -->
                                      <td> <%= users[i].firstName+ ' '+users[i].lastName %> </td>
                                      <td> <%= users[i].email %> </td>
                                      <td> <%= users[i].mobile %> </td>

                                     <td>
                                           <% if(users[i].isVerified==false){ %>
                                           <span class="pl-2 text-danger">Not verified</span>
                                           <% } else{ %> 
                                              <span class="pl-2 text-success">verified</span>
                                           <% }%>   
                                      </td>
                                      
                                      
                                      <td> <%= new Date(users[i].createdAt).toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: 'numeric' })%> </td>
                                      <td>
                                          <!-- Add a data-id attribute with the user's _id -->
                                          <!-- <% if (users[i].isBlock == true) { %>
                                              <button data-id="<%= users[i]._id %>" onclick="blockButton('<%= users[i]._id %>')"  class="btn btn-inverse-danger">unBlock</button>
                                              <% } else { %>
                                                  <button data-id="<%= users[i]._id %>" onclick="blockButton('<%= users[i]._id %>')" class="btn btn-inverse-success">block</button>
                                          <% } %> -->

                                        
                                            <!-- Add a data-id attribute with the user's _id -->
                                            <% if (users[i].isBlock == false) { %>
                                                <a href="/admin/block_users?id=<%= users[i]._id %>">
                                              <button type="button" class="btn btn-inverse-success">unBlock</button>
                                            </a>
                                            <% } else { %>
                                                <a href="/admin/block_users?id=<%= users[i]._id %>">
                                              <button type="button" class="btn btn-inverse-danger">block</button>
                                            </a>
                                            <% } %>
                                      </td>
                                      
                                      
                                      
                                      
                                  </tr>
                              <% } %>
                                  
                             
                              
                              </tbody>
                            </table>
                        </div>
                        <div class="pagination" style="display: flex; justify-content: center;">
                            <% if (page > 1) { %>
                              <a href="/admin/view_users?page=<%= page - 1 %>" class="page-link">Previous</a>
                            <% } %>
                          
                            <% for (let i = 1; i <= totalPages; i++) { %>
                              <a href="/admin/view_users?page=<%= i %>" class="page-link"><%= i %></a>
                            <% } %>
                          
                            <% if (page < totalPages) { %>
                              <a href="/admin/view_users?page=<%=paage + 1 %>" class="page-link">Next</a>
                            <% } %>
                          </div>
                    </div>
                </div>
            </div>
        </div>


    </div>
    
</div>



<%-include('../admin/layouts/footer.ejs') %>